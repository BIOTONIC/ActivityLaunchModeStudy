<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.lovejoy.activitytest.MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is the Main Activity."
            android:textSize="18dp"
            android:gravity="center"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textView"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnOne"
            android:text="Implicit intent: Open a website"
            android:layout_marginTop="52dp"
            android:layout_below="@+id/textView"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"/>
    <Button
            android:text="Start Standard Activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnTwo"
            android:layout_below="@+id/btnOne"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"/>
    <Button
            android:text="Start SingleTop Activty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnThree"
            android:layout_below="@+id/btnTwo"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"/>
    <Button
            android:text="Start SingleTask Activty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnFour"
            android:layout_below="@+id/btnThree" android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"/>
    <Button
            android:text="Start SingleInstance Activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnFive"
            android:layout_below="@+id/btnFour" android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"/>
</RelativeLayout>
